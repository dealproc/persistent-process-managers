<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rxui="http://reactiveui.net"
             xmlns:vm="using:ProcessManagerViewer.ViewModels.CrmAppViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProcessManagerViewer.Views.CrmAppViews.ContactListView"
             x:DataType="vm:ContactListViewModel">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Left">
                <Button Content="Archive"
                        Command="{Binding ArchiveContactCommand}" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">
                <Button Content="Edit"
                        Command="{Binding EditContactCommand}" />
                <Button Content="New"
                        Command="{Binding CreateContactCommand}" />
            </StackPanel>
            <Panel />
        </DockPanel>
        <ListBox ItemsSource="{Binding Contacts}"
                 SelectedItem="{Binding SelectedContact}"
                 ItemTemplate="{StaticResource ContactCard}" />
    </DockPanel>
</UserControl>
